@model Trial_Shop.Models.ProductModel
@{
    ViewBag.Title = "Product details";
}

<h2>@Model.Name</h2>
<div class="text-center">
    <img src="~/Content/images/Products/product1.jpg" alt=""/>
    <h2>@Model.Price</h2>
    <button class="btn btn-default" onclick="AddProductToCart(@Model.ProductId, @Model.Name, @Model.Price)">
        Add to cart
    </button>
</div>

